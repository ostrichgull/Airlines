@using Airlines.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Airlines App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")      
</head>
<body>    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Airlines", "Index", "Companies", new { id = 0, page = 1, typeId = (int)CompanyTypeValue.Airline }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    <li>@Html.ActionLink("Aircraft Manufacturers", "Index", "Companies", new { id = 0, page = 1, typeId = (int)CompanyTypeValue.AircraftManufacturer }, null)</li>
                    <li>@Html.ActionLink("Aircraft", "Index", "Aircraft")</li>
                    <li>@Html.ActionLink("States", "Index", "States")</li>
                    <li>@Html.ActionLink("Countries", "Index", "Countries")</li>
                    <li>@Html.ActionLink("Company Types", "Index", "CompanyTypes")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Airlines App</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")    
    <script type="text/javascript" src="~/Scripts/companies.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
